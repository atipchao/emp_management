@model IEnumerable<Customer>
@{

    ViewBag.Title = "Cust. List";

}
<h3>Customer List</h3>
<div class="card-deck">
    @foreach (var cus in Model)
    {
        var photoPath = "~/images/" + (cus.PhotoPath ?? "Awnser.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@cus.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@cus.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@cus.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@cus.Id" class="btn btn-danger m-1">Delete</a>

            </div>
        </div>

    }

</div>
